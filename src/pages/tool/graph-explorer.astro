---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Graph Explorer">
    <!-- Use full viewport height minus header height (approx 64px) -->
    <div class="flex flex-col min-h-[calc(100vh-64px)]">
        <div class="flex-grow w-full h-[calc(100vh-64px)]">
            <iframe
                src="/ecobuild/graph-explorer-app/index.html"
                width="100%"
                height="100%"
                frameborder="0"
                allowfullscreen
                class="w-full h-full border-0 block"></iframe>
        </div>
    </div>
</Layout>
