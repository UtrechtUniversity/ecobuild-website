---
import Layout from "../layouts/Layout.astro";
import { Mail, GraduationCap, BookOpen, Code } from "lucide-react";
import { SITE } from "../config";
---

<Layout title="Contact Us">
  <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Reach Out</h1>
    </div>

    <div class="bg-gray-50 rounded-3xl p-8 sm:p-12 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Contact Us</h2>
      <div class="max-w-md mx-auto mb-8 text-left">
        <div class="mb-4">
          <label
            for="contact-name"
            class="block text-sm font-medium text-gray-700 mb-1">Name</label
          >
          <input
            type="text"
            id="contact-name"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors bg-white text-gray-900"
            placeholder="Your Name"
          />
        </div>
        <div class="mb-4">
          <label
            for="contact-subject"
            class="block text-sm font-medium text-gray-700 mb-1">Subject</label
          >
          <input
            type="text"
            id="contact-subject"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors bg-white text-gray-900"
            placeholder="Reason for contacting"
          />
        </div>
        <div class="mb-4">
          <label
            for="contact-body"
            class="block text-sm font-medium text-gray-700 mb-1">Message</label
          >
          <textarea
            id="contact-body"
            rows="4"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors resize-none bg-white text-gray-900"
            placeholder="How can we help you?"></textarea>
        </div>
      </div>

      <a
        id="send-email-btn"
        href={`mailto:${SITE.email}`}
        class="inline-flex items-center gap-2 bg-blue-600 text-white px-8 py-3 rounded-full font-medium hover:bg-blue-700 transition-colors"
      >
        <Mail className="w-5 h-5" />
        <span data-i18n-key="join.sendEmail">Send Email</span>
      </a>
    </div>
  </div>
</Layout>

<script define:vars={{ email: SITE.email }}>
  const btn = document.getElementById("send-email-btn");
  const nameInput = document.getElementById("contact-name");
  const subjectInput = document.getElementById("contact-subject");
  const bodyInput = document.getElementById("contact-body");

  function updateMailto() {
    if (!btn) return;
    const name = nameInput?.value || "";
    const subject = subjectInput?.value || "";
    const body = bodyInput?.value || "";

    const finalSubject = encodeURIComponent(
      subject ? `[Contact] ${subject}` : "[Contact] Inquiry",
    );
    const finalBody = encodeURIComponent(`${body}\n\nFrom: ${name}`);

    btn.href = `mailto:${email}?subject=${finalSubject}&body=${finalBody}`;
  }

  [nameInput, subjectInput, bodyInput].forEach((el) => {
    el?.addEventListener("input", updateMailto);
  });
</script>
